<%- include("partials/header.ejs") %>

<h1>Blog</h1>
<h2>Schreib eine Nachricht.</h2>
<form action="/submit" method="post">
    <div class="row p-md-5 m-md-3">
        <div class="col-12 col-md-6 d-flex flex-column mb-3">
            <label for="name">Your name:</label>
            <input class="form-control" type="text" name="name" id="nameInput" placeholder="..">
        </div>    
        <div class="col-12 col-md-6 d-flex flex-column mb-3">
            <label for="email">Your email:</label>
            <input class="form-control" type="email" name="email" id="emailInput" placeholder="..">
        </div>    
        <div class="col-12 d-flex flex-column mb-5">
            <label for="text">Your post:</label>
            <textarea class="form-control" type="text" name="text" id="textInput"></textarea>
        </div>    
        <div class="col-12 text-center"><button class="btn btn-secondary" type="submit">Post</button></div>
        
</div>
</form>

<%- include("partials/footer.ejs") %>